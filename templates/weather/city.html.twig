{% extends 'base.html.twig' %}
{% block title %}Weather in {{ city.getCityName() }}, {{ city.country }}{% endblock %}
{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="example-wrapper">
        <h1>{{ city.getCityName() }}, {{ city.country }}</h1>
        <ul>
            {% for weather in weathers %}
                <li>{{ weather.date|date('d.m.Y') }}: {{ weather.getTemperatureC() }}&deg;C</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
